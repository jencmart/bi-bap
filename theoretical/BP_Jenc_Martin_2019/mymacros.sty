% theorems

% theorem style applied to all bellow 
\theoremstyle{newthm}
\newtheorem{defi}{Definice}

\newtheorem{theorem}[defi]{Theorem}
\newtheorem{corollary}[defi]{Corollary}
\newtheorem{lemma}[defi]{Lemma}
\newtheorem{observation}[defi]{Observation}
\newtheorem{definition}[defi]{Definition}
\newtheorem{note}[defi]{Note}

